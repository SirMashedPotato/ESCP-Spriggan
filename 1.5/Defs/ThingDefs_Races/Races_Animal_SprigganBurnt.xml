				</capacities>
				<power>12</power>
				<cooldownTime>1.2</cooldownTime>
				<linkedBodyPartsGroup>FrontLeftClaws</linkedBodyPartsGroup>
				<extraMeleeDamages>
					<li>
						<def>Flame</def>
						<amount>10</amount>
						<chance>0.2</chance>
					</li>
				</extraMeleeDamages>
				<surpriseAttack>
