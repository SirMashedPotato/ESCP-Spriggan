<?xml version="1.0" encoding="utf-8" ?>
<Patch>


	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Achievements Expanded</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>


				<li Class="PatchOperationAdd"> 
					<xpath>/Defs</xpath>
					<value>

						<AchievementsExpanded.AchievementDef>
							<defName>ESCP_AchievementSpriggan_CreateFirstSeed</defName>
							<label>New Life</label>
							<description>Create your first spriggan seed of any kind</description>
							<bgtexPath>Achievements/ESCP_AchievementBackground</bgtexPath>
							<tab>ESCP_AchievementsTab</tab>
							<tracker Class="Mashed_VanillaAchievementsExpanded.ItemCraftTracker_WithDefList">
								<defList>
									<li>ESCP_SprigganTreeSeed</li>
									<li>ESCP_SprigganTreeSeed_Bog</li>
									<li>ESCP_SprigganTreeSeed_Matron</li>
									<li>ESCP_SprigganTreeSeed_Mother</li>
									<li>ESCP_SprigganTreeSeed_Parasol</li>
									<li>ESCP_SprigganTreeSeed_Thorni</li>
									<li>ESCP_SprigganTreeSeed_Tundra</li>
								</defList>
								<count>1</count>
							</tracker>

							<texPath>Achievements/ESCP_AchievementSpriggan_CreateFirstSeed</texPath>
							<points>10</points>
						</AchievementsExpanded.AchievementDef>
					
					</value>
				</li>
			</operations>
		</match>
	</Operation>


</Patch>

